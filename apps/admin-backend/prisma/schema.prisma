generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RoleCode {
  OWNER
  ADMIN
  MANAGER
  SUPPORT
}

enum OrderStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
}

enum Currency {
  USD
  EUR
  RUB
  USDT
}

enum PaymentStatus {
  INITIATED
  PROCESSING
  SUCCESS
  FAILED
  REFUNDED
}

enum PromoCodeKind {
  GENERAL
  REFERRAL
  ADS
}

enum DiscountType {
  FIXED
  PERCENT
}

enum PartnerEarningStatus {
  PENDING
  APPROVED
  PAID
  REVERSED
}

enum LicenseKeyStatus {
  available
  reserved
  used
  revoked
}

model Role {
  id        String   @id @default(cuid())
  code      RoleCode @unique
  name      String
  users     User[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id            String         @id @default(cuid())
  email         String         @unique
  passwordHash  String
  firstName     String?
  lastName      String?
  isActive      Boolean        @default(true)
  roleId        String
  role          Role           @relation(fields: [roleId], references: [id])
  refreshTokens RefreshToken[]
  auditLogs     AuditLog[]
  licenseKeyAuditLogs LicenseKeyAuditLog[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  @@index([roleId])
}

model RefreshToken {
  id         String   @id @default(cuid())
  tokenHash  String
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userAgent  String?
  ip         String?
  expiresAt  DateTime
  revokedAt  DateTime?
  createdAt  DateTime @default(now())

  @@index([userId])
  @@index([expiresAt])
}

model Product {
  id          String         @id @default(cuid())
  slug        String         @unique
  title       String
  titleEn     String         @default("")
  description String
  descriptionEn String       @default("")
  price       Decimal        @db.Decimal(12, 2)
  oldPrice    Decimal?       @db.Decimal(12, 2)
  currency    Currency       @default(USD)
  category    String
  tags        String[]
  stock       Int?
  isActive    Boolean        @default(true)
  isArchived  Boolean        @default(false)
  images      ProductImage[]
  orderItems  OrderItem[]
  licenseKeys LicenseKey[]
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  @@index([isActive])
  @@index([category])
  @@index([createdAt])
}

model ProductImage {
  id        String   @id @default(cuid())
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  url       String
  isMain    Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([productId])
}

model Order {
  id            String       @id @default(cuid())
  email         String
  status        OrderStatus  @default(PENDING)
  redeemTokenHash String?    @map("redeem_token_hash")
  paymentMethod String?
  paymentId     String?
  country       String?
  ip            String?
  subtotalAmount Decimal      @default(0) @db.Decimal(12, 2)
  discountAmount Decimal      @default(0) @db.Decimal(12, 2)
  totalAmount   Decimal      @db.Decimal(12, 2)
  currency      Currency     @default(USD)
  promoCodeId   String?
  promoCode     PromoCode?   @relation(fields: [promoCodeId], references: [id], onDelete: SetNull)
  promoCodeSnapshot String?
  partnerId     String?
  partner       Partner?     @relation(fields: [partnerId], references: [id], onDelete: SetNull)
  items         OrderItem[]
  payments      Payment[]
  licenseKeys   LicenseKey[]
  partnerEarning PartnerEarning?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  @@index([status])
  @@index([email])
  @@index([createdAt])
  @@index([paymentId])
  @@index([promoCodeId])
  @@index([partnerId])
}

model OrderItem {
  id         String   @id @default(cuid())
  orderId    String
  order      Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId  String
  product    Product  @relation(fields: [productId], references: [id])
  productRaw String
  price      Decimal  @db.Decimal(12, 2)
  quantity   Int      @default(1)

  @@index([orderId])
  @@index([productId])
}

model Payment {
  id            String        @id @default(cuid())
  orderId       String
  order         Order         @relation(fields: [orderId], references: [id], onDelete: Cascade)
  provider      String
  providerRef   String?
  status        PaymentStatus @default(INITIATED)
  amount        Decimal       @db.Decimal(12, 2)
  currency      Currency      @default(USD)
  payload       Json?
  processedAt   DateTime?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@index([orderId])
  @@index([provider])
  @@index([status])
}

model PromoCode {
  id               String   @id @default(cuid())
  code             String   @unique
  kind             PromoCodeKind @default(GENERAL)
  discountType     DiscountType @default(PERCENT)
  discountValue    Decimal  @default(0) @db.Decimal(12, 2)
  ownerLabel       String?
  campaign         String?
  note             String?
  discountPercent  Int
  isActive         Boolean  @default(true)
  usageLimit       Int?
  usedCount        Int      @default(0)
  expiresAt        DateTime?
  partnerId        String? @unique
  partner          Partner? @relation(fields: [partnerId], references: [id], onDelete: SetNull)
  orders           Order[]
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([kind])
  @@index([ownerLabel])
  @@index([campaign])
  @@index([partnerId])
}

model Partner {
  id            String   @id @default(cuid())
  name          String
  payoutPercent Decimal  @default(0) @db.Decimal(5, 2)
  promoCode     PromoCode?
  orders        Order[]
  earnings      PartnerEarning[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model PartnerEarning {
  id               String               @id @default(cuid())
  orderId           String               @unique
  order             Order                @relation(fields: [orderId], references: [id], onDelete: Cascade)
  partnerId         String
  partner           Partner              @relation(fields: [partnerId], references: [id], onDelete: Cascade)
  commissionRate    Decimal              @db.Decimal(5, 2)
  commissionAmount  Decimal              @db.Decimal(12, 2)
  status            PartnerEarningStatus @default(PENDING)
  paidAt            DateTime?
  createdAt         DateTime             @default(now())
  updatedAt         DateTime             @updatedAt

  @@index([partnerId])
  @@index([status])
  @@index([createdAt])
}

model AuditLog {
  id          String   @id @default(cuid())
  userId       String?
  user         User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  entityType   String
  entityId     String
  action       String
  before       Json?
  after        Json?
  ip           String?
  userAgent    String?
  createdAt    DateTime @default(now())

  @@index([entityType, entityId])
  @@index([createdAt])
  @@index([userId])
}

model LicenseKey {
  id        String           @id @default(uuid())
  productKey String          @map("product_key")
  productId String?          @map("product_id")
  product   Product?         @relation(fields: [productId], references: [id], onDelete: SetNull)
  keyValue  String           @unique @map("key_value")
  status    LicenseKeyStatus @default(available)
  orderId   String?          @map("order_id")
  order     Order?           @relation(fields: [orderId], references: [id], onDelete: SetNull)
  email     String?          // customer email for admin UI list, optional
  reservedAt DateTime?       @map("reserved_at")
  usedAt    DateTime?        @map("used_at")
  revokedAt DateTime?        @map("revoked_at")
  createdAt DateTime         @default(now()) @map("created_at")
  updatedAt DateTime         @updatedAt
  auditLogs LicenseKeyAuditLog[]

  @@index([productKey, status])
  @@index([orderId])
  @@map("license_keys")
}

model LicenseKeyAuditLog {
  id        Int        @id @default(autoincrement())
  keyId     String?    @map("key_id")
  key       LicenseKey? @relation(fields: [keyId], references: [id], onDelete: SetNull)
  action    String
  userId    String?    @map("user_id")
  user      User?      @relation(fields: [userId], references: [id], onDelete: SetNull)
  meta      Json?
  createdAt DateTime   @default(now()) @map("created_at")

  @@index([keyId])
  @@index([userId])
  @@index([createdAt])
  @@map("key_audit_log")
}
